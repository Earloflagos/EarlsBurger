@page
@model EarlsBurger.Pages.Admin

@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2>@ViewData["Title"]</h2>

<div class="admin-dashboard">
    <section class="admin-section">
        <h3>Manage Menu Items</h3>
        <a asp-page="/Admin/AddMenuItem" class="btn btn-primary">Add New Menu Item</a>
        <a asp-page="/Admin/EditMenuItems" class="btn btn-secondary">Edit Menu Items</a>
    </section>

    <section class="admin-section">
        <h3>Manage Orders</h3>
        <a asp-page="/Admin/ViewOrders" class="btn btn-info">View Orders</a>
    </section>

    <section class="admin-section">
        <h3>User Management</h3>
        <a asp-page="/Admin/ManageUsers" class="btn btn-warning">Manage Users</a>
    </section>
</div>